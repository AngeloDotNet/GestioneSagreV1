@code {
    private string annoSviluppo = "2022";
    private string annoAttuale = DateTime.Now.Year.ToString();
    private string annoSoftware = string.Empty;
    public string MenuBoard = "Gestione Sagre;Informazioni Software";

    protected override void OnInitialized()
    {
        base.OnInitialized();

        if (annoSviluppo == annoAttuale)
        {
            annoSoftware = annoSviluppo;
        }
        else
        {
            string[] year = { $"{annoSviluppo}", $"{annoAttuale}" };
            annoSoftware = string.Join(" - ", year);
        }
    }
}
